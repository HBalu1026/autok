<Window x:Class="autokWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:autokWpf"
        mc:Ignorable="d"
        Title="Autók" Height="450" Width="800">
    <Grid>
        <Button Content="Betölt" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10" Click="BetoltButton_Click"/>
        <Button Content="Bezár" HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Margin="10" Click="KilepesButton_Click"/>

        <DataGrid x:Name="DataGrid" HorizontalAlignment="Left" Height="200" Margin="10,50,0,0" VerticalAlignment="Top" Width="760"/>

        <TextBox x:Name="TextBoxGyártásiÉv" HorizontalAlignment="Left" Margin="10,260,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Keres" HorizontalAlignment="Left" Margin="150,260,0,0" VerticalAlignment="Top" Width="75" Click="KeresButton_Click"/>
        <ListBox x:Name="ListBoxMárkák" HorizontalAlignment="Left" Height="100" Margin="10,300,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
